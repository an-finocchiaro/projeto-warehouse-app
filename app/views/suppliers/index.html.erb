<h2>Fornecedores</h2>

<% if @suppliers.any? %>
  <table>
    <thead>
      <tr>
        <th>Nome</th>
        <th>Localização</th>
      </tr>
    </thead>
    <tbody>
      <% @suppliers.each do |sup| %>
      <tr>
        <td><%= link_to sup.brand_name, sup %></td>
        <td><%= sup.city %> - <%= sup.state %></td>
      <tr>
      <% end %>
    </tbody>
  </table>
<% else %>
  <p>Não existem fornecedores cadastrados</p>
<% end %>

<%= link_to 'Cadastrar Fornecedor', new_supplier_path %>

